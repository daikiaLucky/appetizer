
<header class='top-page-header'>
  <ul class='lists-right'>
    <% if user_signed_in? %>
      <div class="greeting">
        <%= "いらっしゃいませ！！！" %>
        <%= link_to "#{current_user.nickname}さん", user_path(current_user.id), class: :greeting__link %>
      </div>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <li><%= link_to '新規投稿', new_post_path, class: "post" %></li>
    <% else %>
        <li><%= link_to 'ログイン', user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
    <% end %>
  </ul>

<div class="post">
  <div class="upper-post">
    <div class="post-user">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= post.user.name %>
    </div>
    <div class="post-date">
      <!-- 投稿した時刻を出力する -->
      <%= l post.created_at %>
    </div>
  </div>
  <div class="lower-post">
    <div class="post-content">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= post.content %>
    </div>
    <%= image_tag post.image.variant(resize: '500x500'), class: 'post-image' %>
  </div>
</div>


</header>

<div class='main'>
  <h1>トップページ</h1>
